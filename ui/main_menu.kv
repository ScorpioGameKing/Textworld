#:kivy 1.0.9

<TextworldMMTitle>:
    markup: True
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 64
    halign: 'center'
    valign: 'center'
    text: "TEXTWORLD"

<TextworldMMNew>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "New Game"
    
<TextworldMMLoad>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Load Game"

<TextworldMMTools>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Mod Tools"

<TextworldMMExit>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Exit Game"

<TextworldMMLayout>
    orientation: 'vertical'
    padding: [8,8,8,8]
    title: title
    btn_new: btn_new
    btn_load: btn_load
    btn_tools: btn_tools
    btn_exit: btn_exit
    TextworldMMTitle:
        id: title
    TextworldMMNew:
        id: btn_new
    TextworldMMLoad:
        id: btn_load
    TextworldMMTools:
        id: btn_tools
    TextworldMMExit:
        id: btn_exit

<TextworldMMScreen>:
    layout: layout
    TextworldMMLayout:
        id: layout