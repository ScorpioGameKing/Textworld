#:kivy 1.0.9

<TextworldGDisplay>:
    markup: True
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 12
    text_size: self.size
    halign: 'center'
    valign: 'center'

<TextworldGTerminal>:
    canvas:
        Color:
            rgba: (.15, .35, .35, .25)
        Rectangle:
            pos: self.pos
            size: self.size
    markup: True
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 18
    text_size: self.size
    halign: 'left'
    valign: 'bottom'

<TextworldGInput>:
    multiline: False
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 18
    size_hint_y: None
    height: 34

<TextworldGMenu>:
    markup: True
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 18
    text_size: self.size
    halign: 'center'
    valign: 'top'

<TextworldLLayout>:
    canvas:
        Color:
            rgba: (.0625, .0625, .0625, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: (1.5, 1)
    padding: [6,6,6,6]
    orientation: 'vertical'
    display: display
    command_terminal: command_terminal
    command_input: command_input
    TextworldGDisplay:
        id: display
    TextworldGTerminal:
        id: command_terminal
    TextworldGInput:
        id: command_input

<TextworldRLayout>:
    padding: [2,2,2,2]
    size_hint: (.75, 1)
    game_menu: game_menu
    orientation: 'horizontal'
    TextworldGMenu:
        id: game_menu

<TextworldMiddleLayout>:
    canvas:
        Color:
            rgba: (.35, .15, .15, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    padding: [2,2,2,2]
    size_hint: (.25, 1)
    #status_bars: status_bars
    #menu_buttons: menu_buttons
    orientation: 'horizontal'

<TextworldGLayout>:
    padding: [2,2,2,2]
    left_panel: left_panel
    middle_panel: middle_panel
    right_panel: right_panel
    orientation: 'horizontal'
    TextworldLLayout:
        id: left_panel
    TextworldMiddleLayout:
        id: middle_panel
    TextworldRLayout:
        id: right_panel

<TextworldGScreen>:
    game_layout: game_ui
    TextworldGLayout:
        id: game_ui