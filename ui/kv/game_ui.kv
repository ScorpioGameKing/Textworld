#:kivy 1.0.9

<TextworldGDisplay>:
    text_size: self.size
    markup: True
    font_style: "monocraft"
    role: 'small'

<TextworldGTerminal>:
    font_style: "monocraft"
    role: 'small'
    halign: 'left'
    valign: 'bottom'

<TextworldGInput>:
    multiline: False
    font_name: "./Fonts/Monocraft.ttf"
    mode: "outlined"

<TextworldGMenu>:
    size_hint: (1, 1)
    markup: True
    text: "DEBUG CONTROLS:\nARROWS: Move Camera\nCLICK COMMAND INPUT: Enable Typing"
    font_style: "monocraft"
    role: 'small'
    halign: 'left'
    valign: 'top'

<TextworldLLayout>:
    padding: [4,4,4,4]
    spacing: 2
    size_hint: (0.6, 1)
    orientation: 'vertical'
    display: display
    command_terminal: command_terminal
    command_input: command_input
    TextworldGDisplay:
        id: display
    TextworldGTerminal:
        id: command_terminal
    TextworldGInput:
        id: command_input

<TextworldRLayout>:
    padding: [4,4,4,4]
    spacing: 2
    size_hint: (0.3, 1)
    orientation: 'vertical'
    game_menu: game_menu
    TextworldGMenu:
        id: game_menu

<TextworldMiddleLayout>:
    padding: [4,4,4,4]
    spacing: 2
    size_hint: (0.1, 1)
    #status_bars: status_bars
    #menu_buttons: menu_buttons
    orientation: 'horizontal'

<TextworldGLayout>:
    padding: [2,2,2,2]
    spacing: 2
    size_hint: (1, 1)
    left_panel: left_panel
    middle_panel: middle_panel
    right_panel: right_panel
    orientation: 'horizontal'
    TextworldLLayout:
        id: left_panel
    TextworldMiddleLayout:
        id: middle_panel
    TextworldRLayout:
        id: right_panel

<TextworldGScreen>:
    game_layout: game_ui
    TextworldGLayout:
        id: game_ui