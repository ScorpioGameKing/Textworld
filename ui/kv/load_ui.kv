#:kivy 1.0.9

<LoadedSaveBtn>:
    halign: 'center'
    valign: 'top'
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint_y: None
    size_hint_x: None
    size: (200, 100)
    text_size: self.size
   

<TextworldLdSaveView>:
    orientation: 'vertical'
    padding: [8,8,8,8]

<TextworldLdBackBtn>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Back"
    on_press: app.get_running_app().game.current = 'main_menu_ui'

<TextworldLdLeftPanel>:
    save_view: save_view
    back_btn: back_btn
    TextworldLdSaveView:
        id: save_view
    TextworldLdBackBtn:
        id: back_btn

<TextworldLdDeleteBtn>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Delete"

<TextworldLdLoadBtn>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Load"

<TextworldLdInfoPanel>:
    orientation: 'horizontal'
    padding: [8,8,8,8]
    world_name: name
    Label:
        id: name
        text: "Test"

<TextworldLdOptions>:
    orientation: 'horizontal'
    padding: [8,8,8,8]
    delete: delete
    load: load
    TextworldLdDeleteBtn:
        id: delete
    TextworldLdLoadBtn:
        id: load

<TextworldLdRightPanel>:
    orientation: 'vertical'
    padding: [8,8,8,8]
    info_panel: info_panel
    options: options
    TextworldLdInfoPanel:
        id: info_panel
    TextworldLdOptions:
        id: options

<TextworldLdMenuLayout>:
    orientation: 'horizontal'
    padding: [8,8,8,8]
    left_panel: left_panel
    right_panel: right_panel
    TextworldLdLeftPanel:
        id: left_panel
    TextworldLdRightPanel:
        id: right_panel

<TextworldLdScreen>:
    layout: layout
    TextworldLdMenuLayout:
        id: layout