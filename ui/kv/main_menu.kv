#:kivy 1.0.9

<TextworldMMTitle>:
    text: "TEXTWORLD"
    halign: 'center'
    valign: 'center'
    text_color: "snow"
    font_style: "monocraft"
    role: 'large'

<TextworldMMNew>:
    style: "outlined"
    height: "56dp"
    MDButtonText:
        text: "New Game"
        theme_text_color: "Custom"
        text_color: "snow"
        font_style: "monocraft"
        role: 'small'
    
<TextworldMMLoad>:
    style: "outlined"
    height: "56dp"
    MDButtonText:
        text: "Load Game"
        theme_text_color: "Custom"
        text_color: "snow"
        font_style: "monocraft"
        role: 'small'

<TextworldMMTools>:
    style: "outlined"
    height: "56dp"
    MDButtonText:
        text: "Mod Tools"
        theme_text_color: "Custom"
        text_color: "snow"
        font_style: "monocraft"
        role: 'small'

<TextworldMMExit>:
    style: "outlined"
    height: "56dp"
    MDButtonText:
        text: "Exit Game"
        theme_text_color: "Custom"
        text_color: "snow"
        font_style: "monocraft"
        role: 'small'

<TextworldMMLayout>
    orientation: 'vertical'
    padding: [12,12,12,12]
    spacing: 12
    title: title
    btn_new: btn_new
    btn_load: btn_load
    btn_tools: btn_tools
    btn_exit: btn_exit
    TextworldMMTitle:
        id: title
    TextworldMMNew:
        id: btn_new
    TextworldMMLoad:
        id: btn_load
    TextworldMMTools:
        id: btn_tools
    TextworldMMExit:
        id: btn_exit

<TextworldMMScreen>:
    layout: layout
    TextworldMMLayout:
        id: layout