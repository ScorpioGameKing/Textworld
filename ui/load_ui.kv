#:kivy 1.0.9

<TextworldLdSaveView>:
    orientation: 'vertical'
    padding: [8,8,8,8]
    do_scroll_x: False
    do_scroll_y: True

<TextworldLdBackBtn>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Back"
    on_press: self.parent.parent.parent.manager.current = 'main_menu_ui'

<TextworldLdLeftPanel>:
    save_view: save_view
    back_btn: back_btn
    TextworldLdSaveView:
        id: save_view
    TextworldLdBackBtn:
        id: back_btn

<TextworldLdDeleteBtn>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Delete"

<TextworldLdLoadBtn>:
    font_name: ".\Fonts\Monocraft.ttf"
    font_size: 24
    size_hint: (.25, .25)
    text: "Load"

<TextworldLdInfoPanel>:
    orientation: 'horizontal'
    padding: [8,8,8,8]

<TextworldLdOptions>:
    orientation: 'horizontal'
    padding: [8,8,8,8]
    delete: delete
    load: load
    TextworldLdDeleteBtn:
        id: delete
    TextworldLdLoadBtn:
        id: load

<TextworldLdRightPanel>:
    orientation: 'vertical'
    padding: [8,8,8,8]
    info_panel: info_panel
    options: options
    TextworldLdInfoPanel:
        id: info_panel
    TextworldLdOptions:
        id: options

<TextworldLdMenuLayout>:
    orientation: 'horizontal'
    padding: [8,8,8,8]
    left_panel: left_panel
    right_panel: right_panel
    TextworldLdLeftPanel:
        id: left_panel
    TextworldLdRightPanel:
        id: right_panel

<TextworldLdScreen>:
    layout: layout
    TextworldLdMenuLayout:
        id: layout